<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    android:gravity="center_vertical"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5sp"
        android:padding="10sp"
        android:background="#F3F2F2"
        android:layout_marginBottom="16sp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userimgupload"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="141dp"
        android:layout_marginTop="83dp"
        android:scaleType="centerCrop"
        android:src="@drawable/person"
        app:shapeAppearanceOverlay="@style/circular" />




    <TextView
        android:id="@+id/username_textview"
        android:layout_width="300sp"
        android:layout_height="45sp"
        android:layout_below="@+id/userimgupload"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:drawableStart="@drawable/usernameimg"
        android:drawablePadding="5sp"
        android:elevation="4dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:text="username"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="300sp"
        android:layout_height="45sp"
        android:layout_below="@+id/password_textview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:drawableStart="@drawable/emailimg"
        android:drawablePadding="10sp"
        android:elevation="4dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:text="email"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/password_textview"
        android:layout_width="300sp"
        android:layout_height="45sp"
        android:layout_below="@+id/username_textview"
        android:layout_alignParentStart="true"

        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/lockimg"
        android:drawablePadding="10sp"
        android:elevation="4dp"

        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:text="password"
        android:textSize="25sp" />

        <Button
            android:id="@+id/btnanother"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_textview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:text="submit another response" />
    </RelativeLayout>
</LinearLayout>