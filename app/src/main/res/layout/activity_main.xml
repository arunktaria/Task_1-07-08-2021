<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <LinearLayout
        android:id="@+id/linear_signup"
        android:padding="16sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >



        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/userimgupload"
            android:layout_gravity="center"
            android:src="@drawable/person"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:hint="@string/username"
            android:drawableStart="@drawable/usernameimg"
            android:drawablePadding="10sp"
            android:id="@+id/usernamesign"
            android:padding="5sp"
            android:background="@drawable/editextshape"
            android:elevation="4dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:hint="@string/email"
            android:layout_marginTop="16sp"
            android:drawableStart="@drawable/emailimg"
            android:drawablePadding="10sp"
            android:id="@+id/emailsign"
            android:padding="5sp"
            android:background="@drawable/editextshape"
            android:elevation="4dp"


            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="16sp"
            android:layout_height="45sp"
            android:id="@+id/passwordsign"
            android:hint="@string/password"
            android:padding="5sp"
            android:background="@drawable/editextshape"
            android:elevation="4dp"
            android:drawableStart="@drawable/lockimg"
            android:drawablePadding="10sp"
            />


        <ImageButton
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:id="@+id/captureimg"
            android:layout_marginTop="10sp"
            android:src="@drawable/imageimg"
            android:background="@color/white"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="16sp"
            android:text="@string/register"
            android:elevation="5sp"
            android:background="@drawable/editextshape"
            android:id="@+id/signupbtn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/termcon"
            android:text="view term  conditions"
            android:fontFamily="sans-serif-light"
            android:textSize="15sp"
            />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>